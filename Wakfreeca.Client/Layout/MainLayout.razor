@inherits LayoutComponentBase

<MudThemeProvider @ref="@_themeProvider" IsDarkMode="_themeService.IsDarkMode" IsDarkModeChanged="_themeService.SetDarkMode"/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudLink Color="Color.Inherit" Underline="Underline.None" Href="/">Wakfreeca</MudLink>
        <MudSpacer />
         <MudTooltip Text="@_toolTip" Delay="300" Arrow="true" Placement="Placement.Right" Color="Color.Dark">
        <MudIconButton Icon="@_icon" Color="Color.Inherit" @onclick="ToggleThemeMode" />
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>