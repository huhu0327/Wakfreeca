@inherits LayoutComponentBase

<MudThemeProvider @ref="@_themeProvider" IsDarkMode="_themeService.IsDarkMode" IsDarkModeChanged="_themeService.SetDarkMode"/>

<MudLayout>
    <MudAppBar Elevation="0">
        <MudLink Color="Color.Inherit" Underline="Underline.None" Href="/">Wakfreeca</MudLink>
        <MudSpacer/>
        <MudTooltip Text="테마 변경" Delay="300" Arrow="true" Placement="Placement.Right" Color="Color.Dark">
            <MudMenu Dense="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopCenter">
                <ActivatorContent>
                    <MudAvatar Rounded="true" Variant="Variant.Outlined">
                        <MudIcon Icon="@_icon"/>
                    </MudAvatar>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem @onclick="SetLightMode">밝은 테마</MudMenuItem>
                    <MudMenuItem @onclick="SetDarkMode">어두운 테마</MudMenuItem>
                    <MudMenuItem @onclick="SetSystemMode">시스템 테마</MudMenuItem>
                </ChildContent>
            </MudMenu>
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>